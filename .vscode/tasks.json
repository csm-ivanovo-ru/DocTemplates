{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"type": "shell",
	"request": "launch",
	"presentation": {
		"reveal": "always",
		"focus": false,
		"echo": true,
		"panel": "shared",
		"clear": false,
	},
	"problemMatcher": {
		"owner": "custom",
		"fileLocation": [
			"absolute"
		],
		"pattern": [
			{
				"regexp": ".*",
				"message": 0
			},
			{
				"regexp": "(.*\\.ps1):(\\d*) знак:(\\d*)(.*)",
				"file": 1,
				"line": 2,
				"column": 3
			}
		]
	},
	"tasks": [
		{
			"label": "Clean",
			"command": " if ( Test-Path -Path 'src' ) { Remove-Item -Path 'src' -Recurse -Force }",
			"presentation": {
				"clear": true,
			},
		},
		{
			"label": "Convert Open Office files to plain XML",
			"command": ".\\tools\\ConvertTo-PlainXMLAllDocuments.ps1",
			"args": [
				"-Path",
				"template",
				"-DestinationPath",
				"src\\template",
				"-Indented",
				"-Verbose"
			],
			"dependsOn": [
				"Clean"
			]
		},
		{
			"label": "Create Open Office files from plain XML",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": ".\\tools\\ConvertFrom-PlainXML.ps1",
			"args": [
				"-DestinationPath",
				"template\\Записка ФБУ Тест-С.-Петербург.ott",
				"-Path",
				"src\\template\\Записка ФБУ Тест-С.-Петербург.ott",
				"-Force",
				"-Verbose"
			],
		},
	],
}
