{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"type": "shell",
	"request": "launch",
	"presentation": {
		"reveal": "silent",
		"focus": false,
		"echo": true,
		"panel": "shared",
		"clear": true,
	},
	"problemMatcher": {
		"owner": "custom",
		"fileLocation": [
			"absolute"
		],
		"pattern": [
			{
				"regexp": "^(?!\\s*\\+)(?:(.*?\\.ps1) : )?(?:(ПРЕДУПРЕЖДЕНИЕ|WARNING|ОШИБКА|ERROR):)?\\s*(.*)$",
				"severity": 2,
				"message": 3
			},
			{
				"regexp": "(.*)",
				"message": 1
			},
			{
				"regexp": "(.*):(\\d+) знак:(\\d+)",
				"file": 1,
				"line": 2,
				"column": 3
			}
		]
	},
	"tasks": [
		{
			"label": "Install tools",
			"command": ".\\prepare.ps1",
			"options": {
				"cwd": "${workspaceRoot}/install"
			},
			"presentation": {
				"reveal": "always",
				"clear": true
			}
		},
		{
			"label": "Clean",
			"command": "Invoke-Build -Task Clean"
		},
		{
			"label": "Convert Open Office files to plain XML",
			"command": "Invoke-Build -Task Unpack -Verbose"
		},
		{
			"label": "Optimize Open Office XML files",
			"command": "Invoke-Build -Task OptimizeXML -Verbose"
		},
		{
			"label": "Unpack and optimize Open Office XML files",
			"command": "Invoke-Build -Task UnpackAndOptimize -Verbose"
		},
		{
			"label": "Create Open Office files from plain XML",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "Invoke-Build -Task Build -Verbose"
		},
		{
			"label": "Восстановить шаблон Письма из XML и открыть его",
			"group": "build",
			"command": "Invoke-Build -Task 'BuildAndOpen' -Filter 'Письмо ФБУ Тест-С.-Петербург' -Verbose"
		},
		{
			"label": "Восстановить шаблон Записки из XML и открыть его",
			"group": "build",
			"command": "Invoke-Build -Task 'BuildAndOpen' -Filter 'Записка ФБУ Тест-С.-Петербург' -Verbose"
		}
	]
}
