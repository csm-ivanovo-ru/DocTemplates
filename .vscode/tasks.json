{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"type": "shell",
	"request": "launch",
	"presentation": {
		"reveal": "always",
		"focus": false,
		"echo": true,
		"panel": "dedicated",
		"clear": true,
	},
	"problemMatcher": {
		"owner": "custom",
		"fileLocation": [
			"absolute"
		],
		"pattern": [
			{
				"regexp": ".*",
				"message": 0
			},
			{
				"regexp": "(.*\\.ps1):(\\d*) знак:(\\d*)(.*)",
				"file": 1,
				"line": 2,
				"column": 3
			}
		]
	},
	"tasks": [
		{
			"label": "Convert Open Office files to plain XML",
			"command": ".\\tools\\ConvertTo-PlainXML.ps1",
			"args": [
				"-FilePath",
				"template\\Записка ФБУ Тест-С.-Петербург.ott",
				"-DestinationPath",
				"src\\template"
			],
		},
