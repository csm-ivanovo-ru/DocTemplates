; Check http://editorconfig.org/ for more informations
; Top-most EditorConfig file
root = true

[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{editorconfig,gitattributes,gitignore}]

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
end_of_line = lf

[{LICENSE,NOTICE}]
indent_style = space
indent_size = 2
end_of_line = lf

[{Makefile,*.mk}]
indent_style = tab
tab_width = 2
indent_size = 2
charset = utf-8
end_of_line = lf

[*.{cmd,bat}]
indent_style = space
indent_size = 2
charset = utf-8

[*.{ps1,psm1,psd1}]
indent_style = tab
indent_size = 4
charset = utf-8-bom

[*.json]
indent_style = tab
indent_size = 2

[*.{xml,xsl,xslt,xsd,xba,xdl,xlb,xlc,rng}]
indent_style = tab
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
charset = utf-8

[*.xml]
trim_trailing_whitespace = false

[packages.config]
indent_style = tab
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
charset = utf-8

[*.bas]
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.vcf]
indent_style = space
indent_size = 1
end_of_line = crlf
insert_final_newline = true
charset = utf-8
